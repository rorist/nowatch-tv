<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="@color/orange1"
                android:startColor="@color/orange2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="@color/grey" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape>
            <gradient
                android:endColor="@color/orange2"
                android:startColor="@color/orange3"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="@color/grey" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>
